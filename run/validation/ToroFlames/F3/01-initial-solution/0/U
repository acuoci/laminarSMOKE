FoamFile
{
    version     2.2;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

Umean		0.50;

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 $Umean);

boundaryField
{
    inletfuel
    {
        type            codedFixedValue;
        value           uniform (0 0 $Umean);

        name            parabolicVelocityProfile;
        code            #{
				const fvPatch& boundaryPatch = this->patch();
				const vectorField& Cf = boundaryPatch.Cf();

				vectorField& v = *this;
				scalar Um = 0.50;
				scalar R = 0.0045;
				forAll(Cf,faceI)
				{
					scalar x = Cf[faceI].x(), rSq = x*x;
					v[faceI] = vector(0, 0, 2*Um*(1 - rSq/R/R));
				}
			#};
    }
    inletair
    {
        type            fixedValue;
        value           uniform (0 0 $Umean);
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (0 0 0);
    }
    leftside
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
        phi             phi;
    }
    burnerwall
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    axis
    {
        type            empty;
    }
    front
    {
        type            wedge;
    }
    back
    {
        type            wedge;
    }
}


// ************************************************************************* //
