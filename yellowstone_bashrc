

# Installation instructions for LaminarSmoke from scratch

module purge
module load intel/19.0.5.281
module load gnu/5.4.0
module load mkl/19.1.0.166
module load boost/1.55.0-intel-18-impi 
module load openmpi/1.10.7

# 1/ Install openfoam: https://openfoam.org/download/source/software-for-compilation/
source $HOME/soot/local/openFOAM_v6/OpenFOAM-6/etc/bashrc
# 2/ Before compiling openFOAM, need to create folders:
# mkdir -p $HOME/local/openFOAM_v6/OpenFOAM-6/platforms/linux64GccDPInt32OptSYSTEMOPENMPI/src/Pstream/mpi
# mkdir -p $HOME/local/openFOAM_v6/OpenFOAM-6/platforms/linux64GccDPInt32OptSYSTEMOPENMPI/src/parallel/decompose/ptscotchDecomp/
# 3/ When building steady laminarSmoke solver: missing libgfortran. Fixed by: ln -s /usr/lib64/libgfortran.so.4 ~/local/openFOAM_v6/OpenFOAM-6/platforms/linux64GccDPInt32Opt/lib/libgfortran.so

export EIGEN3_ROOT=$HOME/soot/local/eigen/eigen-3.3.8

